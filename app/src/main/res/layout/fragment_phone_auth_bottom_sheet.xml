<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGrey"
    android:id="@+id/phoneauth_bottomsheet_container"
    tools:context=".signup.phoneauth.phoneAuthBottomSheet">
 <LinearLayout android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:orientation="vertical">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         style="@style/Widget.UmmoBite.PhoneAuthBottomSheet.title"
         android:text="@string/phoneauth_bottomsheet"
         android:id="@+id/phoneAuth_bottomsheet_title" />
     <RelativeLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:paddingEnd="20dp"
         android:paddingStart="20dp">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/phoneauth_bottomsheet_skip_button"
             style="@style/Widget.UmmoBite.Button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_marginEnd="65dp"
             android:layout_marginRight="12dp"
             android:text="Skip" />

         <com.google.android.material.button.MaterialButton

             android:id="@+id/phoneauthresend_sms_button"
             style="@style/Widget.UmmoBite.Button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:elevation="3dp"
             android:text="Resend SMS" />
     </RelativeLayout>
 </LinearLayout>
</FrameLayout>