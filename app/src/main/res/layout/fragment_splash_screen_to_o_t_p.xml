<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appleWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signup.phoneauth.SplashScreenToOTP">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
 >

        <ImageView
            android:id="@+id/ummoLogo_toOTP"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/ummo_logo_text"
            android:padding="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/logo" />

        <ProgressBar
            android:id="@+id/splashProgressBar_toOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ummoLogo_toOTP"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"></ProgressBar>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>